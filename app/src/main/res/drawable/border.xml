<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#C8D9DF" />
            <stroke
                android:width="7dp"
                android:color="#4D8BA4" />
            <corners android:radius="7dp" />
            <padding
                android:top="4dp"
                android:right="4dp"
                android:bottom="4dp"
                android:left="4dp" />
        </shape>
    </item>
    <item android:state_selected="true">
        <shape>
            <solid android:color="#C8D9DF" />
            <stroke
                android:width="7dp"
                android:color="#4D8BA4" />
            <corners android:radius="7dp" />
            <padding
                android:top="4dp"
                android:right="4dp"
                android:bottom="4dp"
                android:left="4dp" />
        </shape>
    </item>
    <item>
        <shape>
            <stroke
                android:width="7dp"
                android:color="#4D8BA4" />
            <corners android:radius="7dp" />
            <padding
                android:top="4dp"
                android:right="4dp"
                android:bottom="4dp"
                android:left="4dp" />
        </shape>
    </item>
</selector>
